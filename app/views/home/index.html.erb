<% if current_user %>
  <% if current_user.virtual_requests_artist_for > 0 %>
    <div class="row-divider pad-all-large">
      <h1 class="tbl-header margin-right-large">My Queue (<%= @virtual_requests_to_work_on.count %>)</h1>
      <ul>
        <li class="pull-left margin-right-large">working on</li>
        <li class="pull-left">recently completed</li>
      </ul>
      <%= render partial: "/virtual_requests/virtual_request_table", :locals => { :virtuals => @virtual_requests_to_work_on } %>
    </div>
  <% end %>

  <div class="row-divider pad-all-large">
    <h1 class="tbl-header margin-right-large">My Requests (<%= @virtual_requests_made.count %>)</h1>
    <ul>
      <li class="pull-left margin-right-large">being worked on</li>
      <li class="pull-left">recently completed</li>
    </ul>
    <%= render partial: "/virtual_requests/virtual_request_table", :locals => { :virtuals => @virtual_requests_made, :show_artists => true } %>
  </div>

  <div class="row-divider pad-all-large">
    <h1 class="tbl-header">Artist Statistics</h1>
    <table class="artist-tbl">
      <thead>
        <tr>
          <th>Artist</th>
          <th>Queued</th>
          <th>Completed <%= Time.new.strftime("%B") %></th>
          <th>Completed all-time</th>
          <th>Converted <%= Time.new.strftime("%B") %></th>
          <th>Converted all-time</th>
        </tr>
      </thead>
      <tbody>
        <% @all_creative_users.each do |a| %>
          <% if a.virtuals.count > 0 || a.virtual_requests_artist_for > 0 %>
            <tr>
              <td>
                <%= image_tag a.avatar_image, class: "small-avatar" %>
                <%= link_to a.name, creative_user_path(a) %>
                <% if !a.in_queue %>
                  <%= image_tag "icons/asleep.png", class: "asleep-icon", alt: "Not in queue" %>
                <% end %>
              </td>
              <td><%= a.virtual_requests_artist_for %></td>
              <td><%= a.virtuals_this_month %></td>
              <td><%= a.virtuals.count %></td>
              <td>?</td>
              <td>?</td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

<% else %>
  <section class="white-box sign-in">
    <%= image_tag "logos/logo.png" %> 
    <%= form_for :session, url: sessions_path, :html => { :class => "pad-top" }  do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %><br />

      <%= f.label :password %>
      <%= f.password_field :password %><br />

      <%= f.submit "Sign in", class: "button" %>
    <% end %>
  </section>
<% end %>