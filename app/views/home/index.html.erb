<% if current_user %>
  <% if current_user.artist %>
    <div class="row primary-bg pad-all-large">
      <h1 class="tbl-header margin-right-large">My Queue (<%= current_user.vr_to_work_on.count %>)</h1>
      <ul class="tabs">
        <li class="pull-left margin-right-large tab-on">pending</li>
        <li class="pull-left">recently completed</li>
      </ul>
      <%= render partial: "/virtual_requests/virtual_request_table", :locals => { :virtuals => current_user.vr_to_work_on, :show_requested => true } %>
      <%= render partial: "/virtual_requests/virtual_request_table", :locals => { :virtuals => current_user.vr_completed.limit(30), :completed => true, :show_requested => true } %>
      <%= link_to "Add to Queue", new_virtual_request_path(queue: true), class: "new-btn" %></a>
    </div>
  <% end %>

  <% if current_user.sales %>
    <div class="row primary-bg pad-all-large">
      <h1 class="tbl-header margin-right-large">My Requests (<%= current_user.requests_pending.count %>)</h1>
      <ul class="tabs">
        <li class="pull-left margin-right-large tab-on">pending</li>
        <li class="pull-left">recently completed</li>
      </ul>
      <%= render partial: "/virtual_requests/virtual_request_table", :locals => { :virtuals => current_user.requests_pending, :show_artists => true } %>
      <%= render partial: "/virtual_requests/virtual_request_table", :locals => { :virtuals => current_user.requests_completed, :show_artists => true, :completed => true } %>
      <%= link_to "Virtual Request", new_virtual_request_path, class: "new-btn" %></a>
    </div>
  <% end %>

  <div class="row secondary-bg pad-all-large">
    <h1 class="tbl-header reverse">Artist Statistics</h1>
    <%= render "statistics/artist_stats_table" %>
  </div>

  <div class="row third-bg pad-all-large">
    <h1 class="tbl-header reverse">Request Statistics</h1>
    <%#= render "statistics/request_stats_table" %>
  </div>

<% else %>
  <div class="row primary-bg pad-top-xlarge pad-bottom-xlarge">
    <section class="white-box sign-in">
      <%= image_tag "logos/logo.png", class: "pull-left pad-top" %> 
      <%= form_for :session, url: sessions_path, :html => { :class => "pull-right" }  do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %><br />

        <%= f.label :password %>
        <%= f.password_field :password %><br />

        <%= f.submit "Sign in", class: "button" %>
      <% end %>
    </section>
  </div>
<% end %>