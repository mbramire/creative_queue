<div class="virtual-box">
  <div class="row">
    <div class="two-col pad-right">
      <h2><%= @virtual_request.company %> - <%= v.version %>.0</h2>  
      <em>recipients</em>
      <p class="comments">
        <% rec = v.recipients.split(",") %>
        <% rec.each do |email| %>
          <%= email %><br/>
        <% end %> 
      </p>
      <p class="pad-top">
        <em>distributor comments</em>
        <p class="comments">
          <% if v.user_comments.nil? %>
            <em class="alert-text">none</em>
          <% else %>
            <%= v.user_comments %>
          <% end %>
        </p>
      </p>
      <% if current_user.artist_for?(@virtual_request) %>
        <% if v.sent.present? %>
          <p class="pad-top">
            <em>sent on</em> <%= v.sent_date %></br>
          </p>
          <%= link_to "Resend", send_out_virtual_request_virtual_path(@virtual_request, v), method: :put, class: "email-btn margin-top" %>
        <% else %>
          <%= link_to "Edit #{v.version}.0", edit_virtual_request_virtual_path(@virtual_request, v), class: "edit-btn margin-right margin-top" %>
          <%= link_to "Email", send_out_virtual_request_virtual_path(@virtual_request, v), method: :put, class: "email-btn margin-top" %>
        <% end %>   
      <% end %>         
    </div>
    <div class="two-col pdf-box">
      <%= link_to image_tag("icons/large-pdf.png"), v.document.url, class: "pull-left margin-right pdf-button", target: "_blank" %>
      <p style="line-height: 20px;">
        <em>No. </em> <%= v.quote_number %><br/>
        <em>completed on</em> <%= v.completed_date %></br> 
        <em>by </em><%= v.creative_user.name %></br>
      </p>
      <p style="padding-top: 20px;">
        <em>artist comments</em>
        <p class="comments">
          <% if v.artist_comments.empty? %>
            <em class="alert-text">none</em>
          <% else %>
            <%= v.artist_comments %>
          <% end %>
        </p>
      </p>
    </div>
  </div>
</div>