<div class="nav-container">
  <% if current_user %>
    <section class="profile clickable">
      <div>
          <%= link_to image_tag(current_user.avatar_image), journalbooks_profile_path(current_user) %>
      </div>
      <%= link_to journalbooks_profile_path(current_user) do %>
        <ul>
          <li> 
            <%= current_user.name %>
            <% if !current_user.in_queue %>
              <%= image_tag "icons/asleep.png", class: "asleep-icon", alt: "Not in queue" %>
            <% end %>
          </li>
          <li> <%= current_user.admin ? "Admin #{current_user.title.name}" : current_user.title.name %></li>
          <li class="pad-top">Badges(<%= current_user.awarded_badges.count %>)</li> 
        </ul>
      <% end %>
    </section>
    <section class="profile-small clickable">
      <div>
          <%= link_to image_tag(current_user.avatar_image), journalbooks_profile_path(current_user) %>
      </div>
      <%= link_to journalbooks_profile_path(current_user) do %>
        <ul>
          <li>Badges(<%= current_user.awarded_badges.count %>)</li>
          <li>|</li>
          <li> <%= current_user.admin ? "Admin #{current_user.title.name}" : current_user.title.name %></li> 
          <li> 
            <%= current_user.name %>
            <% if !current_user.in_queue %>
              <%= image_tag "icons/asleep.png", class: "asleep-icon", alt: "Not in queue" %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </section>
  <% end %>
  <nav>
    <%= link_to image_tag('logos/logo-reversed.png'), journalbooks_virtual_requests_path %>
    <% unless current_user %>
      <ul>
        <li>Creative Queue</li>
      </ul>
    <% end %>
    <% if current_user %>
      <ul class="navigation">
        <% unless current_user.no_queue? %>
          <%= link_to journalbooks_virtual_requests_path do %>
            <li class="<%= @nav[0] == 'home' ? "selected" : "" %>">my queue</li>
          <% end %>
        <% end %>
        <%= link_to journalbooks_search_path do %>
          <li class="<%= @nav[0] == 'search' ? "selected" : "" %>">search</li>
        <% end %>
        <%= link_to journalbooks_statistics_path do %>
          <li class="<%= @nav[0] == 'statistics' ? "selected" : "" %>">stats</li>
        <% end %>
        <%= link_to journalbooks_profiles_path do %>
          <li class="<%= @nav[0] == 'profiles' ? "selected" : "" %>">profiles</li>
        <% end %>
        <%= link_to journalbooks_rules_path do %>
          <li class="<%= @nav[0] == 'rules' ? "selected" : "" %>">rules</li>
        <% end %>
        <%= link_to session_path(current_user), method: "delete" do %>
          <li class="pull-right">log out</li>
        <% end %>
      </ul>
    <% end %>
  </nav>
</div>
