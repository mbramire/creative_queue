<% if current_user %>
  <section class="profile clickable">
    <div>
        <%= link_to image_tag(current_user.avatar_image), creative_user_path(current_user) %>
    </div>
    <%= link_to creative_user_path(current_user) do %>
      <ul>
        <li> 
          <%= current_user.name %>
          <% if !current_user.in_queue %>
            <%= image_tag "icons/asleep.png", class: "asleep-icon", alt: "Not in queue" %>
          <% end %>
        </li>
        <li> <%= current_user.admin ? "Admin" : current_user.title %></li>
        <li class="pad-top"> Awards(0) Records(0)</li> 
      </ul>
    <% end %>
  </section>
  <nav>
    <ul class="navigation">
      <%= link_to root_path do %>
        <li class="<%= @nav[0] == 'home' ? "selected" : "" %>">home</li>
      <% end %>
      <%= link_to virtual_requests_path do %>
        <li class="<%= @nav[0] == 'virtuals' ? "selected" : "" %>">virtuals</li>
      <% end %>
      <%= link_to creative_users_path do %>
        <li class="<%= @nav[0] == 'creative_users' ? "selected" : "" %>">users</li>
      <% end %>
      <%= link_to session_path(current_user), method: "delete" do %>
        <li>log out</li>
      <% end %>
    </ul>
    <%= link_to image_tag('logos/logo-reversed.png'), root_path %>
  </nav>
<% end %>