<%= form_for @rule do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  <div class="row pad-all-large">
    <div class="white-box">
      <h1>Edit Rule</h1>
      <%= render "rule_form_fields", f: f %>
      <%= f.submit "Edit Rule", class: "save-btn margin-right" %>
      <%= link_to "Delete Rule", rule_path(@rule), method: :delete, data: { confirm: "Are you sure you want to delete this rule?" }, class: "delete-btn" %>   
    </div>
  </div>
<% end %>