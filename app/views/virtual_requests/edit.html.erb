<%= form_for(@virtual_request) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row pad-all-large">
    <div class="white-box">
      <h1>Edit <%= @virtual_request.end_client %></h1>
      <%= render 'quote_fields', f: f %>
      <%= render 'company_fields', f: f %>
      <%= render "form_fields", f: f, comments: true %>
      <%= f.submit "Save Changes", class: "save-btn margin-right" %>
      <% if @virtual_request.processed %>
        <%= link_to "Go Back", virtual_request_path(@virtual_request), class: "prev-btn margin-right" %>
      <% else %>
        <%= link_to "Go Back", root_path, class: "prev-btn margin-right" %>        
      <% end %>
      <%= link_to "Delete Request", virtual_request_path(@virtual_request), 
        method: :delete, 
        data: { confirm: "Are you sure you want to delete #{@virtual_request.company}?" },
        class: "delete-btn" %>
    </div>
  </div>
<% end %>

