<%= form_for(@virtual_request) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="white-box">
    <h1>Edit Virtual Request</h1>
    <%= render "form_fields", f: f %>
    <%= f.submit "Save Changes", class: "button margin-right" %>
    <%= link_to "Go Back", virtual_request_path(@virtual_request), class: "button margin-right" %>
    <%= link_to "Delete Virtual Request", virtual_request_path(@virtual_request), method: :delete, data: { confirm: "Are you sure you want to delete #{@virtual_request.company}?" } %>
  </div>
<% end %>

